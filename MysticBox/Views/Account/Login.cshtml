@model LoginViewModel
@inject SignInManager<AppUser> SignInManager
@{
    ViewData["Title"] = "MysticBox 2.0 - Log in";
}

@*<br />*@
@*style="text-align:center; margin: 0 auto; width: 500px; background-color:wheat;"*@
<div class="container-fluid">
    <div class="row align-items-center justify-content-center" style="padding-top:30px;">
        <div style="background-color:#2A2A2C; width:400px; border-radius: 15px;">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
                  style="text-align:center; margin: 0 auto; width:315px;">
                <h4>Account Log in</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" style="width:60%">Log in</button>
                </div>
                <div class="form-group">
                    <a href="~/Account/Register">Register Account</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row align-items-center justify-content-center" style="padding-top:30px;">
        <div style="background-color:#2A2A2C; width:300px; border-radius: 15px; text-align:center;">
            <h4>Upload photo</h4>
            <span class="text-info">To upload other file types please login</span>
            <hr />
            <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="AnonUpload">
                <div class="form-group">
                    <label class="btn btn-default" style="width:60%; background-color:ButtonFace; color:black" for="my-file-selector">
                        <input id="my-file-selector" style="display:none" type="file" name="file" onchange="this.form.submit()" />
                        Upload
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>